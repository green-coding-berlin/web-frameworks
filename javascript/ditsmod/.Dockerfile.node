FROM node:21-slim

WORKDIR /usr/src/app

RUN apt-get -qq update

  COPY 'src/app/app.module.ts' 'src/app/app.module.ts'
  COPY 'src/app/hello-world.controller.ts' 'src/app/hello-world.controller.ts'
  COPY 'src/main.ts' 'src/main.ts'
  COPY 'package.json' 'package.json'
  COPY 'tsconfig.json' 'tsconfig.json'


  RUN npm install
  RUN npm run build
  RUN npm --location=global install pm2
  RUN npm install

  ENV NODE_ENV=production


CMD pm2-runtime start dist/main.js -i max
