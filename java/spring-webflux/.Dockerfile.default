
  FROM maven:3-eclipse-temurin-21 AS build

WORKDIR /usr/src/web

  COPY 'src/main/java/framework/benchmark/BenchmarkApplication.java' 'src/main/java/framework/benchmark/BenchmarkApplication.java'
  COPY 'src/main/java/framework/benchmark/controller/BenchmarkController.java' 'src/main/java/framework/benchmark/controller/BenchmarkController.java'
  COPY 'pom.xml' 'pom.xml'
  COPY 'src/main/resources/application.properties' 'src/main/resources/application.properties'




  RUN mvn package

  FROM eclipse-temurin:21-jre


WORKDIR /opt/web

  RUN ln -sfv /usr/local/openjdk-21/bin/java /usr/bin/java

  COPY --from=build /usr/src/web/target/benchmark-webflux-1.0.0.jar target/benchmark-webflux-1.0.0.jar


RUN ln -sfv /opt/java/openjdk/bin/java /usr/bin/java



CMD /usr/bin/java -jar /opt/web/target/benchmark-webflux-1.0.0.jar
