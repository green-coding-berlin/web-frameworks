
  FROM maven:3-eclipse-temurin-21 AS build

WORKDIR /usr/src/web

  COPY 'src/main/java/the/benchmarker/Main.java' 'src/main/java/the/benchmarker/Main.java'
  COPY 'pom.xml' 'pom.xml'



  RUN mvn package


  FROM eclipse-temurin:21-jre


WORKDIR /opt/web

  RUN ln -sfv /usr/local/openjdk-21/bin/java /usr/bin/java

  COPY --from=build /usr/src/web/target/server-jar-with-dependencies.jar target/server-jar-with-dependencies.jar


RUN ln -sfv /opt/java/openjdk/bin/java /usr/bin/java



CMD /usr/bin/java -jar /opt/web/target/server-jar-with-dependencies.jar
